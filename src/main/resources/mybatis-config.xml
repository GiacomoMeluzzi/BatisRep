<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<typeAliases>
	<!-- ENTITIES  -->
	<typeAlias type="lepackage.models.UtenteEntity" alias="Utente"/>
	<typeAlias type="lepackage.models.RuoloEntity" alias="Ruolo"/>
	<typeAlias type="lepackage.models.MateriaEntity" alias="Materia"/>
	<typeAlias type="lepackage.models.FacoltaEntity" alias="Facolta"/>
	<typeAlias type="lepackage.models.VotoEntity" alias="Voto"/>
	<!-- DTOs -->
	<typeAlias type="lepackage.dto.UtenteDTO" alias="UtenteDTO"/>
	<typeAlias type="lepackage.dto.UtenteMateriaDTO" alias="UtenteMateria"/>
	<typeAlias type="lepackage.dto.FacoltaUtenteDTO" alias="FacoltaUtente"/>
</typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/nuovoprogettorepository?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC"/>
        <property name="username" value="root"/>
        <property name="password" value=""/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
  
    <mapper resource="utente.xml"/> 
    <mapper resource="materia-e-facolta.xml"/>
    
  </mappers>
</configuration>